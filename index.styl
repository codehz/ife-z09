body, html
  margin: 0;
  padding: 0;
  font-family: "Microsoft YaHei";
body
  min-width: 1024px;
@keyframes dropHeader
  0%
    transform: translateY(-56px);
  100%
    transform: translateY(0);
.label-container
  display: flex;
  margin-left: 10px;
.label-container::before
  content: attr(label);
  display: inline-block;
  font-family: "SimHei";
  color: #aaaaaa;
  margin-right: 16px;
  line-height: 24px;
  height: 24px;
  font-size: 14px;
.label-container > select
  flex: 1;
  height: 24px;
header
  width: 100%;
  height: 56px;
  background: #2189bf;
  box-sizing: border-box;
  border-bottom: #2478a7 solid 2px;
  padding: 0 50px;
  animation-name: dropHeader;
  animation-iteration-count: 1;
  animation-timing-function: ease-in;
  animation-duration: 0.1s;
  min-width: 1024px;
  position: fixed;
  & > img
    padding: 9px;
  & > .searchbar
    display: inline-block;
    position: absolute;
    right: 156px;
    top: 14px;
    bottom: 14px;
    width: 313px;
    height: 28px;
    border-radius: 14px;
    box-sizing: border-box;
    border: none;
    background: url(search.png) left 18px center no-repeat white;
    text-indent: 40px;
    outline: none;
  & > .login
    position: absolute;
    right: 90px;
    top: 20px;
    bottom: 20px;
    color: white;
    font-size: 12px;
    line-height: 16px;
    height: 16px;
  & > .login > span
    position: relative;
    top: -4px;
    margin-left: 3px;
.container
  position: absolute;
  width: 100%;
  top: 56px;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
nav
  width: 260px;
  background: #2a2e3d;
  animation-name: dropNav;
  animation-iteration-count: 1;
  animation-timing-function: ease-in;
  animation-duration: 0.1s;
  animation-delay: 0.1s;
  animation-fill-mode: both;
  transform-origin: 0% 50%;
  & > .user
    height: 150px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    & > .icon-and-name
      display: flex;
      align-items: center;
      justify-content: center;
      & > .icon
        width: 58px;
        height: 58px;
        border-radius: 58px;
        color: #b9babe;
        border: solid 2px;
        display: inline-block;
        display: flex;
        align-items: center;
        justify-content: center;
        animation-name: bgswitch;
        animation-iteration-count: 1;
        animation-timing-function: ease-in;
        animation-duration: 0.2s;
        animation-delay: 0.2s;
        animation-fill-mode: both;
        & > .inner
          width: 48px;
          height: 48px;
          animation-name: bgswitch;
          animation-iteration-count: 1;
          animation-timing-function: ease-in;
          animation-duration: 0.2s;
          animation-delay: 0.3s;
          animation-fill-mode: both;
      & > .name
        color: white;
        margin-left: 18px;
        animation-name: bgswitch;
        animation-iteration-count: 1;
        animation-timing-function: ease-in;
        animation-duration: 0.2s;
        animation-delay: 0.4s;
        animation-fill-mode: both;
    & > .info > div
      display: inline-block;
      position: relative;
      color: #6e8095;
      margin-top: 25px;
      padding: 0 40px;
      font-size: 14px;
      animation-name: bgswitch;
      animation-iteration-count: 1;
      animation-timing-function: ease-in;
      animation-duration: 0.2s;
      animation-delay: 0.5s;
      animation-fill-mode: both;
      &::after
        position: absolute;
        top: 0px;
        right: 0px;
        bottom: 0px;
        content: "";
        border-right: solid 1px;
      &:last-of-type::after
        border-right: none;
  & .list > .item
    padding-left: 45px;
    font-size: 12px;
    & > .list
      padding-top: 7px;
      & > .item
        padding-top: 7px;
        padding-bottom: 4px;
        padding-left: 26px;
        background: none;
        animation-name: bgswitch;
        animation-iteration-count: 1;
        animation-timing-function: ease-in;
        animation-duration: 0.1s;
        animation-delay: 0.65s;
        animation-fill-mode: both;
        & > span
          margin-left: 4px;
        & > .list > .item
          animation-name: bgswitch;
          animation-iteration-count: 1;
          animation-timing-function: ease-in;
          animation-duration: 0.1s;
          animation-delay: 0.7s;
          animation-fill-mode: both;
    color: white;
    padding-top: 14px;
    padding-bottom: 14px;
    cursor: pointer;
    animation-name: bgswitch;
    animation-iteration-count: 1;
    animation-timing-function: ease-in;
    animation-duration: 0.1s;
    animation-delay: 0.6s;
    animation-fill-mode: both;
    &:hover, &.opened
      background: #383d4e;
    & > .title
      -webkit-filter: sepia(100%) brightness(60%) saturate(2) hue-rotate(150deg);
      & > img
        padding-right: 5px;
        user-select: none;
        &.arrow
          transform: rotateZ(-90deg);
          transform-origin: 40% 50%;
      & > span
        display: inline-block;
        margin-left: 8px;
        user-select: none;
        cursor: pointer;
    &:hover
    &.opened
      background: #383d4e;
      & > .title
        -webkit-filter: none;
    &.opened > .title > img.arrow
      transform: rotateZ(0deg);
      transform-origin: 40% 50%;
@keyframes dropNav
  0%
    transform: translateX(-260px);
  100%
    transform: translateX(0);
.container > .content
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #eeeeed;
  animation-name: bgswitch;
  animation-iteration-count: 1;
  animation-timing-function: ease-in;
  animation-duration: 0.5s;
  animation-delay: 0.2s;
  animation-fill-mode: both;
@keyframes bgswitch
  0%
    opacity: 0;
    -webkit-filter: grayscale(1) blur(3px);
  100%
    opacity: 1;
    -webkit-filter: grayscale(0) blur(0);
.content > .nav
  height: 30px;
  width: 100%;
  background: white;
  animation-name: dropInnerNav;
  animation-iteration-count: 1;
  animation-timing-function: ease-in;
  animation-duration: 0.1s;
  animation-delay: 0.3s;
  animation-fill-mode: both;
  overflow: hidden;
  font-size: 10px;
  line-height: 30px;
  text-indent: 20px;
  transform-origin: 0% 0%;
  & > a
    text-decoration: none;
    color: #aaaaaa;
    padding: 0 10px;
    &:last-of-type
      color: #6898c2;
@keyframes dropInnerNav
  0%
    transform: perspective(800px) rotateX(90deg);
  100%
    transform: perspective(800px) rotateX(0);
.content > .body
  flex: 1;
  padding: 20px 60px;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  for row in 1 2 3 4 5
    & > :nth-child({row})
      animation-name: bgswitch;
      animation-iteration-count: 1;
      animation-timing-function: ease-in;
      animation-duration: 0.2s;
      animation-delay: .30s + .075s * row;
      animation-fill-mode: both;
.box
  background: white;
  box-sizing: border-box;
  box-shadow: 0 0 2px #828a95;
#block-1
  height: 86px;
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 16px 50px;
  select
    background: url(drop.png) right 10px center no-repeat;
    -webkit-filter: saturate(0);
    padding: 5px 10px;
    -webkit-appearance: none;
    font-size: 12px
    outline: none;
    &.blue
      -webkit-filter: saturate(1);
  #query-project
    flex: 1;
    height: 24px;
    display: flex;
    margin-right: 20px;
    align-items: baseline;
    select
      flex: 1;
      height: 24px;
    &::before
      content: "查询项";
      display: inline-block;
      font-family: "SimHei";
      color: #aaaaaa;
      margin-right: 16px;
      line-height: 24px;
      height: 24px;
      font-size: 14px;
  #query-people
    flex: 1;
    display: flex;
    align-items: center;
    margin-right: 20px;
    & > .col-container
      flex: 1;
      display: flex;
      flex-wrap: wrap;
      align-items: stretch;
      justify-content: space-around;
      height: 54px;
      & > .label-container
        width: 100%;
  #query-time
    flex: 2;
    display: flex;
    flex-wrap: wrap;
    margin-right: 20px;
    margin-left: 20px;
    widths = 40% 30% 30% 40%;
    for wd,i in widths
      > :nth-of-type({i+1})
        flex: 1 1 wd;
  .button
    align-self: center;
.button
  padding: 8px 14px;
  background: #388ac1;
  border-radius: 5px;
  color: white;
#block-2
  display: flex;
  height: 64px;
  margin-top: 9px;
  margin-bottom: 9px;
  margin-bottom: 20px;
  & > *
    margin: 0 2px;
  & >:first-child
    margin-left: 0;
  & >:last-child
    margin-right: 0;
  & > .arrow
    width: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  & > .item::before
    content: attr(time);
    font-size: 12px;
  & > .item
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    flex: 1;
    &:hover
    &.hightlight
      border-top: solid #4388c8 4px;
    & > span
      display: block;
      background: url(yuan.png) left center no-repeat;
      text-indent: 12px;
      color: #ec6500;
      margin-top: 4px;
  & > .history-query
    display: flex;
    align-items: center;
    justify-content: center;
    padding-left: 20px;
    padding-right: 20px;
    & > span
      margin-left: 10px;
#block-3
  margin-top: 4px;
  .volume-list
    display: flex;
    margin-top: 2px;
    justify-content: space-between;
  .box
    width: 200px;
    height: 72px;
    position: relative;
    &::after
      content: "";
      display: block;
      position: absolute;
      width: 62px;
      top: 12px;
      bottom: 12px;
      right: 15px;
    span
      display: block;
      position: absolute;
      left: 8px;
      top: 22px;
      font-size: 12px;
    &::before
      content: "成交量";
      position: absolute;
      left: 8px;
      bottom: 16px;
      font-size: 10px;
      color: #aaaaaa;
    &.green
      border-left: solid #44b29e 4px;
      &::after
        background: #44b29e;
    &.blue
      border-left: solid #388bc2 4px;
      &::after
        background: #388bc2;
    &.red
      border-left: solid #d04a36 4px;
      &::after
        background: #d04a36;
    &.yellow
      border-left: solid #e2cd47 4px;
      &::after
        background: #e2cd47;
#block-4
  height: 360px;
  margin: -5px;
  margin-top: 4px;
  display: flex;
  flex-wrap: wrap;
  & > .box
    border-radius: 5px;
    height: 340px;
    margin: 5px;
    display: flex;
    flex-direction: column;
    & > .title
      height: 42px;
      background: #f4f6f7;
      border-radius: 5px 5px 0px 0px;
      line-height: 42px;
      text-indent: 20px;
      font-size: 12px;
      font-family: "SimHei";
      color: #aaaaaa;
#b1
  flex: 6 0 50%;
.tabs
  flex: 1;
  padding-top: 12px;
  padding-left: 24px;
  position: relative;
  .tab
    display: inline-block;
  input[type="radio"]
    position: absolute;
    top: -9999px;
    left: -9999px;
  label
    display: inline-block;
    position: relative;;
    padding: 5px 20px;
    border-radius: 10px 10px 0 0;
    border: white solid 1px;
    background-color: #ededf0;
    border-bottom: #cacbcb 1px solid;
    z-index: 1000;
  .tab-content
    display: flex;
    opacity: 0;
    transition: all ease 1s;
    position: absolute;
    left: 24px;
    right: 24px;
    bottom: 24px;
    top: 43px;
    padding-top: 30px;
    background: white;
    justify-content: center;
    border: #cacbcb 1px solid;
    z-index: 0;
    table
      border-collapse: collapse;
      td
        border: #d3d3d3 1px solid;
        margin: 0;
        padding: 3px 5px;
  [id^="tab"]:checked + label
    border-top: #cacbcb solid 1px;
    border-left: #cacbcb 1px solid;
    border-right: #cacbcb 1px solid;
    border-bottom: white 1px solid;
    background: white;
  [id^="tab"]:checked ~ [id^="tab-content"]
    opacity: 1;
#b2
  flex: 4 0 30%;
  .form
    padding: 20px 30px;
    flex: 1;
    display: flex;
    flex-direction: column;
    .edit-title
      border-bottom: #cacbcb 1px solid;
    .price-and-principal
      border-bottom: #cacbcb 1px solid;
      display: flex;
      & > *
        flex: 2;
      & > .price
        flex: 1;
        border-right: #cacbcb 1px solid;
    [label]
      display: flex;
      flex-direction: column;
      &::before
        content: attr(label);
        font-size: 12px;
        color: #c3c2c2;
        text-indent: 12px
      & > input
        border: none;
        outline: none;
        padding: 12px;
    .details
      border-bottom: #cacbcb 1px solid;
      flex: 1;
      display: flex;
      textarea
        flex: 1;
        resize: none;
        border: none;
        outline: none;
        padding: 12px;
    .bar
      margin-top: 5px;
      display: flex;
      align-items: baseline;
      .checkbox
        flex: 1;
        font-size: 12px;
        color: #c3c2c2;
        input
          display: none;
        label
          background: url(checkbox_bg.png) left center no-repeat;
          padding-left: 20px;
        input:checked + label
          background: url(checkbox_tick.png) left 2px center no-repeat, url(checkbox_bg.png) left center no-repeat;
#b3
  flex: 4 0 30%;
  .selectline
    padding: 10px 0;
    margin: 0 30px;
    display:flex;
    border-bottom: #a9cfec 1px solid;
    *
      flex: 1;
  .cont
    margin: 0 30px;
    font-size: 11px;
    text-align: center;
    .day
      display: flex;
      height: 32px;
      border-bottom: #e1e1e1 1px solid;
      align-items: center;
      justify-content: space-around;
      *
        flex: 1
    .date
      display: flex;
      flex-wrap: wrap;
      justify-content: flex-start;
      align-items: flex-start;
      .block
        flex: 1 1 14%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        height:32px;
        padding: 2px 0;
        margin: 2px 0;
        &::before
          content: attr(date);
        &::after
          content: attr(fav);
        &[red='red']
          &::after
            color: #c9161d;
        &[border='border']
          border: #f6c62b 1px solid;
        &[holiday='holiday']
          &::before
            color: #c9161d;
#b4
  flex: 6 0 50%;
  position: relative;
  font-size: 12px;
  table
    flex: 1 1 100%;
    border-collapse: collapse;
    position: absolute;
    left: 40px;
    top: 60px;
    right: 40px;
    bottom: 0px;
    width: calc(100% - 80px);
    tr
      td:nth-child(1)
      td:nth-child(2)
        width: 80px;
      td
        border: #cbcbcb solid 1px;
        cursor: pointer;
        height: 30px;
        text-indent: 30px;
        &.value
          position: relative;
          vertical-align: center;
          .line-box
            display: inline-block;
            position: absolute;
            height: 5px;
            padding-bottom: 2px;
            left: 100px;
            top: 14px;
            width: calc(100% - 120px);
            .line
              background: #7fcbf0;
              height: 5px;
      &:hover
        background: #f4f5f7;